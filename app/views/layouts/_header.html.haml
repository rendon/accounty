%header{class: 'navbar navbar-default', id: 'main-navbar'}
  %div{class: 'container-fluid'}
    %button{id: 'toggle-menu', type: 'button', class: 'navbar-toggle collapsed', 'data-toggle' => 'collapse', 'data-target' => '#main-menu'}
      %span{class: 'sr-only'} Toggle navigation
      %span{class: 'icon-bar'}
      %span{class: 'icon-bar'}
      %span{class: 'icon-bar'}
    %div{class: 'navbar-header'}
      %a{class: 'navbar-brand', href: '/'}Accounty
    %nav{class: 'collapse navbar-collapse', id: 'main-menu'}
      %ul{class: 'nav navbar-nav navbar-right'}
        %li= link_to 'Help', '/help'
        %li= link_to 'About', '/about'
        - if current_user
          %li{class: 'dropdown'}
            %a{href: '#', class: 'dropdown-toggle', 'data-toggle' => 'dropdown'}
              Profile <span class='caret'></span>
            %ul{class: 'dropdown-menu'}
              %li= link_to 'Settings', '#'
              %li{class: 'divider'}
              %li= link_to 'Log out', '#'
        - else
          %li= link_to 'Log in', '/login'

